<tr id="<%= dom_id(client) %>">
  <td><%= client.company_name %></td>
  <td><%= "#{client.first_name} #{client.last_name}" %></td>
  <td><%= mail_to client.email %></td>
  <td>
    <%= link_to "Show",  client_path(client), data: { turbo_frame: "_top" },
          class: "btn btn-sm btn-primary" %>
    <%= link_to "Edit",  edit_client_path(client), data: { turbo_frame: "_top" },
          class: "btn btn-sm btn-secondary" %>
    <%= link_to "Delete", client_path(client),
          method: :delete, data: { confirm: "Are you sure?", turbo_frame: "_top" },
          class: "btn btn-sm btn-danger" %>
  </td>
</tr>
