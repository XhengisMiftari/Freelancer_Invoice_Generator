<%= simple_form_for(invoice) do |f| %>
  <%= f.input :tax %>
  <%= f.input :description %>
  <%= f.input :project_id, collection: current_user.projects.where(status: true).collect { |p| [p.name, p.id] }, prompt: "Select Project" %>
  <%= f.submit "Create & Send Invoice", class: "btn btn-success" %>
<% end %>
