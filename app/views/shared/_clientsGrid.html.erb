<h2>Clients</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Projects</th>
      <th>Details</th>
    </tr>
  </thead>

  <tbody>
    <% clients.each do |client| %>
      <tr>
        <td><%= client.first_name %><%= client.last_name %></td>
        <td><%= client.email %></td>
        <td><%= client.projects.count %></td>
        <td>
          <%= link_to "Client", client_path(client), class: "text-decoration-none" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
