<%= simple_form_for(project_date, html: { class: "form" }) do |f| %>
  <%= f.input :start_date, as: :string, input_html: { data: { controller: "flatpickr" } } %>
  <%= f.input :end_date, as: :string, input_html: { data: { controller: "flatpickr" } } %>
  <%= f.input :project_id, collection: current_user.projects, prompt: "Select Project" %>
  <%= f.button :submit, data: { turbo_confirm: "Create these project dates??" }, class: "ibutton" %>
<% end %>
