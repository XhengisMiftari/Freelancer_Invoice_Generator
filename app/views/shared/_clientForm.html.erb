<%= simple_form_for(client, html: { class: "form", data: { controller: "client-form", turbo_frame: "new_client_form" }}) do |f| %>
  <%= f.input :first_name, placeholder: "First name *", label: false %>
  <%= f.input :last_name, placeholder: "Last name *", label: false %>
  <%= f.input :date_of_birth,
              as: :date,
              start_year: Date.today.year - 90,
              end_year: Date.today.year - 12,
              order: [:year, :month, :day] %>
  <%= f.input :address, placeholder: "Address", label: false %>
  <%= f.input :phone_number, placeholder: "Phone number *", label: false %>
  <%= f.input :company_name, placeholder: "Company name", label: false %>
  <%= f.input :email, placeholder: "Email address *", label: false %>
  <%= f.button :submit, data: { turbo_confirm: "Create this client?" },
            style: "background:#2c3e50; color:#fff; border-radius:4px; padding:0.6rem 1rem;" %>
<% end %>
