<%= simple_form_for(client, html: { data: { controller: "client-form", turbo_frame: "new_client_form" }}) do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :date_of_birth,
              as: :date,
              start_year: Date.today.year - 90,
              end_year: Date.today.year - 12,
              order: [:year, :month, :day] %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :company_name %>
  <%= f.input :email %>
  <%= f.button :submit,
            style: "background:#2c3e50; color:#fff; border-radius:4px; padding:0.6rem 1rem;" %>
<% end %>
