<%= simple_form_for(client, html: { class: "form shadow", data: { controller: "client-form", turbo_frame: "new_client_form" } }) do |f| %>
<%= f.input :first_name, placeholder: "First name *", label: false %>
  <%= f.input :last_name, placeholder: "Last name *", label: false %>
  <%= f.input :date_of_birth,
              as: :string,
              input_html: { type: "text", autocomplete: "off", placeholder: "Date of birth *",data: { controller: "flatpickr" } }, label: false %>
  <%= f.input :address, placeholder: "Address", label: false %>
  <%= f.input :phone_number, placeholder: "Phone number *", label: false %>
  <%= f.input :company_name, placeholder: "Company name", label: false %>
  <%= f.input :email, placeholder: "Email address *", label: false %>
  <%= f.button :submit, data: { turbo_confirm: "Update this client?" },
            class: "create"%>
<% end %>
