<%= simple_form_for(project, html: { data: { controller: "project-form", turbo_frame: "new_project_form" } }) do |f| %>
  <%= f.input :name %>
  <%= f.input :price %>
  <%= f.input :status, as: :select, collection: [["Paid", true], ["Not Paid", false]], prompt: "Select Status" %>
  <%= f.input :client_id, collection: Client.all.map { |c| ["#{c.first_name} #{c.last_name}", c.id] }, prompt: "Select Client" %>
  <%= f.button :submit %>
<% end %>
