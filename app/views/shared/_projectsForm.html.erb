<%= simple_form_for(project) do |f| %>
  <%= f.input :name %>
  <%= f.input :price %>
  <%= f.input :status, as: :select, collection: [["Paid", true], ["Not Paid", false]], prompt: "Select Status" %>
  <%= f.input :client_id, collection: Client.all.collect { |c| [c.first_name + " " + c.last_name, c.id] }, prompt: "Select Client" %>
  <%= f.button :submit %>
<% end %>

