<%= simple_form_for(project, html: { class: "form shadow", data: { controller: "project-form", turbo_frame: "new_project_form" } }) do |f| %>
  <%= f.input :name, placeholder: "Name *", label: false %>
  <%= f.input :price, placeholder: "Price *", label: false %>
  <%= f.input :status, as: :select, collection: [["Completed", true], ["Ongoing", false]], prompt: "Select Status *" %>

  <%= f.input :client_id, collection: current_user.clients.map { |c| ["#{c.first_name} #{c.last_name}", c.id] }, prompt: "Select Client *" %>
  <%= f.button :submit, data: { turbo_confirm: "Update this project?" },
            class: "create"%>
<% end %>
