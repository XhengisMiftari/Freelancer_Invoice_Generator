<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="card shadow p-4" style="min-width: 350px; max-width: 400px; width: 100%;">
    <h2 class="text-center mb-4">Welcome to FLIG</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-control" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "form-control" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions text-center mt-3">
        <%= f.button :submit, "Log in", class: "button" %>
      </div>
    <% end %>
    <div class="w-100 text-center mt-3" >
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
