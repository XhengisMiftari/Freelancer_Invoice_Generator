<tr id="<%= dom_id(project) %>">
  <td><%= project.name %></td>
  <td>
    <span class="badge <%= project.status ? 'bg-success' : 'bg-warning' %>">
      <%= project.status ? "Completed" : "Pending" %>
    </span>
  </td>
  <td><%= project.client&.company_name %></td>
  <td>
    <%= link_to "Show",  project_path(project), data: { turbo_frame: "_top" }, class: "btn btn-sm btn-primary"   %>
    <%= link_to "Edit",  edit_project_path(project), data: { turbo_frame: "_top" }, class: "btn btn-sm btn-secondary" %>
    <%= link_to "Delete", project_path(project),
      method: :delete, data: { confirm: "Are you sure?" }, data: { turbo_frame: "_top" },
      class: "btn btn-sm btn-danger" %>
  </td>
</tr>
