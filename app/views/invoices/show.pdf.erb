<!-- filepath: app/views/invoices/show.pdf.erb -->
<h1>Invoice #<%= @invoice.id %></h1>
<p><strong>Date:</strong> <%= @invoice.created_at.strftime("%Y-%m-%d") %></p>
<p><strong>Project:</strong> <%= @invoice.project.name %></p>
<p><strong>Client:</strong> <%= @invoice.project.client&.company_name %></p>
<p><strong>Description:</strong> <%= @invoice.description %></p>
<p><strong>Tax:</strong> <%= @invoice.tax %></p>
<p><strong>Price:</strong> <%= number_to_currency(@invoice.project.price) %></p>
<p><strong>Start Date:</strong> <%= @invoice.project.project_date.start_date %></p>
<p><strong>End Date:</strong> <%= @invoice.project.project_date.end_date %></p>
