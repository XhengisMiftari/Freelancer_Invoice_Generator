<h2>Invoice Details</h2>
  <%= link_to "Download PDF", invoice_path(@invoice, format: :pdf), class: "ibutton", target: "_blank" %>
<p>
  <strong>Tax amount</strong>
  <%= @invoice.tax %>
</p>
<p>
  <strong>Description</strong>
  <%= @invoice.description %>
</p>
<div data-controller="swal-confirm">
<%= link_to invoice_path(@invoice), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this invoice?", swal_text: "This cannot be reverted!"
}, class: "button" do %>
<i class="fa-solid fa-trash"></i>
<% end %>
</div>


<ul>
    <li><%= @invoice.tax%></li>
    <li><%= @invoice.description%></li>
    <li class="list-group-item"><strong>Project Name: </strong><%= @invoice.project.name %></li>
    <li class="list-group-item"><strong>Client: </strong><%= @invoice.project.client&.company_name %></li>
    <li class="list-group-item"><strong>Price: </strong><%= @invoice.project.price %></li>
    <li class="list-group-item"><strong>Start Date: </strong><%=@invoice.project.project_date.start_date %></li>
    <li class="list-group-item"><strong>End Date: </strong><%= @invoice.project.project_date.end_date %></li>
</ul>
<%= link_to invoices_path, class: "button" do %>
<i class="fa-solid fa-rotate-left"></i>
<% end %>
