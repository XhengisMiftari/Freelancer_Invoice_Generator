<h2>Edit Project Date</h2>
<%= simple_form_for(@project_date) do |f| %>
  <%= f.input :start_date, as: :date, start_year: Date.today.year - 5, end_year: Date.today.year + 5, order: [:year, :month, :day] %>
  <%= f.input :end_date, as: :date, start_year: Date.today.year - 5, end_year: Date.today.year + 5, order: [:year, :month, :day] %>
  <%= f.input :project_id, collection: Project.all.collect { |p| [p.name, p.id] }, prompt: "Select Project" %>
  <%= f.button :submit, "Update Project Date" %>
<% end %>

<%= link_to "Back", project_dates_path, class: "btn btn-secondary mt-3" %>
