<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="card-show">
    <h2>Project Date Details</h2>

    <p>
      <strong>Project:</strong>
      <%= @project_date.project&.name %>
    </p>
    <p>
      <strong>Start Date:</strong>
      <%= @project_date.start_date.strftime("%Y-%m-%d") %>
    </p>
    <p>
      <strong>End Date:</strong>
      <%= @project_date.end_date.strftime("%Y-%m-%d") %>
    </p>
    <div data-controller="swal-confirm">
      <%= link_to "Edit", edit_project_date_path(@project_date), class: "btn btn-primary" %>
      <%= link_to "Back", project_dates_path, class: "btn btn-secondary" %>
      <%= link_to project_date_path(@project_date), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this project date?", swal_text: "This cannot be reverted!!" }, class: "btn btn-danger", title: "Delete" do %>
        <i class="fa fa-trash"></i>
      <% end %>
  </div>
</div>
